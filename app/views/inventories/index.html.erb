<%= render "shared/jumbotron", header: "Inventory", tag_line:"", alignment: "text-center" %>
<p id="notice"><%= notice %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Product name</th>
      <th>Price </th>
      <th>In stock</th>
      <th>Committed</th>
      <th>Ordered</th>
      <th>Available</th> 
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td><%= inventory.product_name %></td>
        <td>P<%= inventory.price %></td>
        <td><%= inventory.in_stock %></td>
        <td><%= inventory.committed %></td>
        <td><%= inventory.ordered %></td>
        <td>       
            <% if inventory.in_stock.to_i - inventory.committed.to_i + inventory.ordered.to_i != 0 then %>
              <%= inventory.in_stock.to_i - inventory.committed.to_i + inventory.ordered.to_i%>  
            <% else %>
              <%= "No more stock" %>
            <% end %>  
        </td>
        <td><%= link_to 'Show', inventory %></td>
        <td><%= link_to 'Edit', edit_inventory_path(inventory) %></td>
        <td><%= link_to 'Destroy', inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Inventory', new_inventory_path %> || <%= link_to 'Orders', orders_path %>
